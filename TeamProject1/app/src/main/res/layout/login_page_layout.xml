<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/login_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/login_background"
        android:clipToOutline="true"
        tools:ignore="MissingConstraints,RedundantNamespace,UnusedAttribute"
        tools:layout_editor_absoluteX="-89dp"
        tools:layout_editor_absoluteY="67dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="58dp"
            android:background="@drawable/login_page_img" />

        <TextView
            android:id="@+id/login_text"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="253dp"
            android:background="@drawable/login_text"
            android:gravity="center" />

        <EditText
            android:id="@+id/userID"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/login_textarea"
            android:inputType="text"
            android:hint="Id"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/userPassword"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="365dp"
            android:background="@drawable/login_textarea"
            android:inputType="textPassword"
            android:hint="Password"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="445dp"
            android:text="Login"
            android:textSize="24dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/join_button" />

        <Button
            android:id="@+id/join_button"
            android:layout_width="160dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="505dp"
            android:text="JOIN"
            android:textSize="24dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/join_button" />

        <Button
            android:id="@+id/lan_button_eng"
            android:layout_width="86dp"
            android:layout_height="63dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="589dp"
            android:background="@drawable/lan_button_eng" />

        <Button
            android:id="@+id/lan_button_kor"
            android:layout_width="86dp"
            android:layout_height="63dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="589dp"
            android:background="@drawable/lan_button_kor" />

        <Button
            android:id="@+id/lan_button_chn"
            android:layout_width="86dp"
            android:layout_height="63dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="251dp"
            android:layout_marginTop="589dp"
            android:background="@drawable/lan_button_chn" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>