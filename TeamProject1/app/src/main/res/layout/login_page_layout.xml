<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/login_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/login_background"
        android:clipToOutline="true"
        tools:ignore="MissingConstraints,RedundantNamespace,UnusedAttribute"
        tools:layout_editor_absoluteX="-89dp"
        tools:layout_editor_absoluteY="67dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/login_page_img" />

        <TextView
            android:id="@+id/login_text"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="303dp"
            android:background="@drawable/login_text"
            android:gravity="center" />

        <EditText
            android:id="@+id/ID"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/login_textarea"
            android:hint="Id"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="425dp"
            android:background="@drawable/login_textarea"
            android:hint="Password"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="505dp"
            android:background="@drawable/login_button" />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="160dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="565dp"
            android:background="@drawable/signup_button" />

        <Button
            android:id="@+id/lan_button_eng"
            android:layout_width="86dp"
            android:layout_height="63dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="649dp"
            android:background="@drawable/lan_button_eng" />

        <Button
            android:id="@+id/lan_button_kor"
            android:layout_width="86dp"
            android:layout_height="63dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="649dp"
            android:background="@drawable/lan_button_kor" />

        <Button
            android:id="@+id/lan_button_chn"
            android:layout_width="86dp"
            android:layout_height="63dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="236dp"
            android:layout_marginTop="649dp"
            android:background="@drawable/lan_button_chn" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>