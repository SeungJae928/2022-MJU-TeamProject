<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#3F9CF1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/imageView4"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:background="@drawable/shape_oval"
                android:text="4"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/st_name_info"
                android:layout_width="54dp"
                android:layout_height="34dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginStart="70dp"
                android:text="401"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="355dp"
        android:layout_height="500dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/radius_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/route_btn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginStart="77dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roc_icon"
            android:contentDescription="@string/todo" />

        <CheckBox
            android:id="@+id/fav_checkbox_info"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginStart="215dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_selector"
            android:button="@null" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="73dp"
            android:text="노선도"
            android:textColor="#000000"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="30dp"
            android:background="#33000000"></View>

        <View
            android:layout_width="290dp"
            android:layout_height="2dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="100dp"
            android:background="#330007B5"></View>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="215dp"
            android:layout_marginTop="73dp"
            android:text="즐겨찾기"
            android:textColor="#000000"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="125dp"
            app:srcCompat="@drawable/subway_icon" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="122dp"
            android:text="역내 정보"
            android:textColor="#000000" />

        <FrameLayout
            android:layout_width="132dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="152dp"
            android:background="@drawable/radius_sub_layout">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="15dp"
                android:text="역내 혼잡도"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="38dp"
                android:text="혼잡"
                android:textColor="#F20505"
                android:textSize="15dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="132dp"
            android:layout_height="70dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="152dp"
            android:background="@drawable/radius_sub_layout">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:layout_marginTop="15dp"
                android:text="도착 예상 시간"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="38dp"
                android:text="00분 00초"
                android:textColor="#F20505"
                android:textSize="15dp"
                android:textStyle="bold" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="250dp"
            app:srcCompat="@drawable/i_icon" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="250dp"
            android:text="시설 정보"
            android:textColor="#000000" />

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="275dp"
            android:background="@drawable/radius_sub_layout">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/toilet_icon" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/etc_icon" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="17dp"
                android:text="개찰구 내 화장실"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="37dp"
                android:text="편의점, 자판기, 안내 센터, 무인 민원 발급기"
                android:textColor="#000000"
                android:textSize="12dp" />
        </FrameLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>