<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="153dp"
        android:layout_height="66dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="485dp"
        android:text="회원가입"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/joinName"
        android:layout_width="256dp"
        android:layout_height="46dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="375dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:textColor="#686868"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/joinID"
        android:layout_width="190dp"
        android:layout_height="41dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="373dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="317dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/joinPassword"
        android:layout_width="256dp"
        android:layout_height="46dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="439dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="246dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/verification_button"
        android:layout_width="79dp"
        android:layout_height="49dp"
        android:layout_marginStart="282dp"
        android:layout_marginTop="366dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="316dp"
        android:text="check"
        android:textSize="12sp"
        android:background="#3F9CF1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/join_button2"
        android:layout_width="103dp"
        android:layout_height="53dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="545dp"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="133dp"
        android:text="Join"
        android:textSize="16sp"
        android:background="#3F9CF1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>